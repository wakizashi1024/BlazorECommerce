@inject AuthenticationStateProvider AuthStateProvider
@using System.Security.Claims

@if(authorized)
{
    <li><a class="dropdown-item" href="admin/categories">Categories</a></li>
    <li><a class="dropdown-item" href="admin/product-types">Product Types</a></li>
    <li><a class="dropdown-item" href="admin/products">Products</a></li>
    <hr />
}

@code {
    private bool authorized = false;

    protected override async Task OnInitializedAsync()
    {
        var role = (await AuthStateProvider.GetAuthenticationStateAsync())
            .User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;

        if (role is not null && role.Contains("Admin"))
        {
            authorized = true;
        }
    }
}
